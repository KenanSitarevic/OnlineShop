<a href="/clearCart">Delete everything</a>
<%if (articles){%>
<div class="flex-row flex-wrap justify-between">
  <% if (articles.length>0) { %> <% for (var i = 0; i < articles.length; i++){%>
  <div
    onclick="location.href='articles/<%=articles[i]._id%>'"
    class="card clickable width-30"
  >
    <div class="col s12">
      <img
        class="responsive-img"
        src="<%=articles[i].image[0]%>"
        alt="Avatar"
      />
    </div>
    <div class="col s12">
      <h5><b><%= articles[i].name %></b></h5>
      <%- articles[i].description %>
      <a href="/articles/user/<%= articles[i].user._id %>"
        ><%= articles[i].user.displayName %></a
      >
      <p><%=req.session.cart.order[i].qty%></p>
      <br />
    </div>
  </div>

  <a href="/articles/cart/purchase" class="btn">Purchase</a>

  <% } %> <% } else{ %>
  <h5>You do not have any articles</h5>
  <% } %> <% } %>
</div>
